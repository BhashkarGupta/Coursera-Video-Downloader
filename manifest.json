{
  "manifest_version": 3,
  "name": "Coursera Video Downloader",
  "description": "Download Coursera course videos concurrently. Educational purpose only.",
  "version": "3.0",
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "*://*.coursera.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.coursera.org/*"
      ],
      "js": [
        "html2pdf.bundle.min.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}