{
  "manifest_version": 3,
  "name": "Coursera Video Downloader",
  "version": "1.0",
  "permissions": [
    "downloads",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.coursera.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.coursera.org/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}